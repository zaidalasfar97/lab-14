<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <%- include('../../layout/header.ejs') %>
        <main>
            <div>
                <img src="<%=bookDetail.image_url %> " alt="">
                <p>
                    <%=bookDetail.title %>
                </p>
                <p>
                    <%=bookDetail.author %>
                </p>
                <p>
                    <%=bookDetail.description %>
                </p>
                <p>
                    <%=bookDetail.isbn %>
                </p>

            </div>

            <button id="updateBtn">Show Form</button>
            <section id="updateForm">
                <form action="/updatebooks/<%=bookDetail.id%>?_method=put " method="POST">
                    <input type="text" name="title" value="<%=bookDetail.title%>">
                    <input type="text" name="author" value="<%=bookDetail.author%>">
                    <input type=" text" name="isbn" value="<%=bookDetail.isbn%>">
                    <input type=" text" name="image_url" value="<%=bookDetail.image_url%>">
                    <textarea name="description"><%= bookDetail.description%> </textarea>
                    <button>Update Book</button>
                </form>

            </section>
            <section>
                <form action="/deletebooks/<%=bookDetail.id%>?_method=delete" method="POST">
                    <button id='deleteBtn'>Delete</button>
                </form>
            </section>
        </main>

        <%- include('../../layout/footer.ejs') %>
            <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
            <script src="../js/app.js"></script>
</body>

</html>